<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.cygnus"
          tools:ignore="LockedOrientationActivity">

  <application
      android:name=".CygnusApp"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:logo="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:theme="@style/AppTheme">

    <activity android:name=".SplashActivity"
              android:screenOrientation="sensorPortrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
        <data
            android:host="cygnus.page.link"
            android:scheme="https"/>
      </intent-filter>
    </activity>

    <activity android:name=".SignInActivity"
              android:screenOrientation="sensorPortrait"/>

    <activity android:name=".sign_up.SignUpActivity"
              android:screenOrientation="sensorPortrait"/>

    <activity android:name=".MainActivity"
              android:screenOrientation="sensorPortrait"/>

    <activity
        android:name=".StudentsActivity"
        android:label="Manage Students"
        android:parentActivityName=".MainActivity"
        android:screenOrientation="sensorPortrait"/>

    <activity
        android:name=".NoticeActivity"
        android:label="Announcements"
        android:parentActivityName=".MainActivity"
        android:screenOrientation="sensorPortrait"/>

    <activity
        android:name=".AttendanceActivity"
        android:label="Attendance"
        android:parentActivityName=".MainActivity"
        android:screenOrientation="sensorPortrait"/>

    <activity android:name=".SchoolActivity"
              android:screenOrientation="sensorPortrait"/>

    <activity
        android:name=".TeachersActivity"
        android:label="Staff"
        android:parentActivityName=".SchoolActivity"
        android:screenOrientation="sensorPortrait"/>

    <activity android:name=".SchoolClassesActivity"
              android:label="Manage Classes"
              android:parentActivityName=".SchoolActivity"
              android:screenOrientation="sensorPortrait"/>

  </application>

</manifest>